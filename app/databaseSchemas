    id - 

Comments
    id - integer
    comment - text
    user_id - integer (foreign key)
    race_id - integer (foreign key)

Model Comment relations
    users belongsToMany('User')
    races belongsToMany('Race')

Files (morph_table for trainings and races)
    id - integer
    file - string
    ext - string
    fileable_id - integer
    fileable_type - string

Model File relations
    fileable morphTo()

Images (morph_table for trainings, races and teams)
    id - integer
    image - string
    imageable_id - integer
    imageable_type - string

Model Image relations
    imageable morphTo()

Announces (morph_table for trainings, races, users and teams)
    id - integer
    announce - text
    user_id - integer (foreign key)
    imageable_id - integer
    imageable_type - string

Model Announce relations
    announceable morphTo()
    belongsTo('user')

Teams
    id - integer
    name - string
    description - text
    user_id - integer (foreign key)
    image - string
    thumb - string

Model Team relations
    user belongsTo('User')
    users belongsToMany('User')
    morphMany('Image', 'imageable')
    morphMany('Announce', 'announceable')

team_user (pivot_table)
    user_id - integer
    team_id - integer


Posts
    id - integer
    title - string
    post - text
    user_id - integer (foreign key)
    image - string
    thumb - string

Categories
    id - integer
    name - string
    description - text

categorie_post (pivot_table)
    post_id - integer
    categorie_id - integer