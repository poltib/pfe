Users
    id - integer
    name - string
    first_name - string
    username - string
    password - string
    email - string
    description - text
    image - string
    thumb - string
    role_id - integer (foreign key)

Model User relations
    hasMany('Race')
    hasMany('Training')
    hasMany('Post')
    message hasMany('Message', 'from')
    message belongsToMany('Message')
    hasMany('Comment')
    hasMany('Announce')
    morphMany('Announce', 'announceable')
    belongsToMany('Role')
    raceParticip belongsToMany('Race')
    trainingParticip belongsToMany('Training')

Roles
    id - integer
    name - string

role_user
    role_id - integer
    user_id - integer

Model Role relations
    belongsToMany('User')

Messages
    id - integer
    object - string
    message - text
    from - integer (foreign key)

Model Message relations
    user belongsTo('User', 'from')
    to belongsToMany('User')

message_user (pivot_table)
    user_id - integer
    message_id - integer

Trainings
    id - integer
    name - string
    description - text
    address - string
    user_id - integer (foreing key)

training_user (pivot_table)
    training_id - integer
    user_id - integer

Model Training relations
    user belongsTo('User')
    users belongsToMany('User')
    morphMany('Image', 'imageable')
    morphMany('File', 'fileable')
    morphMany('Announce', 'announceable')

Races
    id - integer
    name - string
    description - text
    address - string
    link - string
    user_id - integer (foreing key)

race_user (pivot_table)
    race_id - integer
    user_id - integer

Model Race relations
    user belongsTo('User')
    users belongsToMany('User')
    morphMany('Image', 'imageable')
    morphMany('File', 'fileable')
    morphMany('Announce', 'announceable')
    hasMany('Comment')

